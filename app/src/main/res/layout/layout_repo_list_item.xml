<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="githubAccount"
            type="jp.co.yumemi.android.code_check.model.GitHubAccount" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/repositoryNameView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/repositoryNameTextViewStyle"
            android:layout_marginHorizontal="@dimen/text_layout_margin_horizontal"
            android:layout_marginVertical="@dimen/text_layout_margin_vertical"
            android:text="@{githubAccount.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>