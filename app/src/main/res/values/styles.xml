<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Repo List Text Style-->
    <style name="repositoryNameTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Error Dialog Fragment Text Style-->
    <style name="txtInvalidUserInput">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Round ImageView Style-->
    <style name="roundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Layout Favorite List Item Style-->
    <style name="txtName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Layout Github Repository Details Style-->
    <style name="txtLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>