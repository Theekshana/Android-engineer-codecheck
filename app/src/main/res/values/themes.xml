<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.AndroidEngineerCodeCheck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <!--
    This style defines the overall theme for the Android Engineer CodeCheck app.
    It inherits from the Base.AndroidEngineerCodeCheck style and provides additional customizations.
    -->
    <style name="Theme.AndroidEngineerCodeCheck" parent="Base.AndroidEngineerCodeCheck" />

</resources>